<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context=".AddPostPart2Fragment">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number_part2"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:background="@drawable/add_post_border"
            android:padding="24dp"
            android:textAlignment="center"
            android:hint="Your phone number"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />


        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:background="@drawable/add_post_border"
            android:padding="24dp"
            android:textAlignment="center"
            android:id="@+id/poster_location_part2"
            android:hint="Your location"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:background="@drawable/add_post_border"
            android:padding="24dp"
            android:textAlignment="center"
            android:id="@+id/item_description_part2"
            android:hint="Describe your product (optional)"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/add_post_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Select product categories"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:id="@+id/tags_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:padding="4dp"
        android:layout_marginTop="24dp"
        android:id="@+id/submit_part2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/next_page_background"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:textSize="16dp"

            android:text="Post advertisement"/>
        <ImageView
            android:src="@drawable/ic_send_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>