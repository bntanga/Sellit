<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context=".AccountFragment">

        <TextView
            android:layout_marginTop="8dp"

            android:padding="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/brownText"
            android:id="@+id/name_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Murdoch"
            android:gravity="center_horizontal" />




    <LinearLayout
        android:background="@drawable/add_post_border"
        android:id="@+id/notifications_card_account"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_notification_32"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="Notifications" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_post_border"
        android:id="@+id/posts_card_account"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_product_32"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="Your Posts" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_post_border"
        android:id="@+id/saved_posts_card_account"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_bookmark_32"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="Saved Posts" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/add_post_border"
    android:id="@+id/edit_info_card_account"
    android:layout_gravity="center"
    android:layout_width="match_parent"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_edit_32"/>
    <TextView
        android:id="@+id/edit_info_account"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:text="Edit Phone Number and Address" />

</LinearLayout>







</LinearLayout>