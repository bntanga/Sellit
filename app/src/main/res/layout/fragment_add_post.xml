<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context=".AddPostFragment">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/product_name_input"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_post_border"
        android:padding="24dp"
        android:textAlignment="center"
        android:hint="Name of product"
        android:gravity="center_horizontal"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_price_input"
            android:layout_width="match_parent"
            android:background="@drawable/add_post_border"
            android:padding="24dp"
            android:textAlignment="center"
            android:hint="Price of product"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/upload_image_button"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_upload_32"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Upload Image" />

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:padding="40dp"
        android:background="@drawable/default_border"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/no_image_uploaded_text"
        android:background="@drawable/no_image_uploaded"
        android:layout_gravity="center"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="No Image Uploaded"
        android:textSize="48dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:padding="4dp"
        android:layout_marginTop="24dp"
        android:id="@+id/next_page_add_info_button"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/next_page_background"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:textSize="16dp"

            android:text="Next Page"/>
        <ImageView
            android:src="@drawable/ic_next_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>